{
  "name": "serverless-nodejs-starter",
  "version": "1.1.0",
  "engines": {
    "node": ">=8.10.0"
  },
  "description": "A Node.js starter for the Serverless Framework with async/await and unit test support",
  "main": "handler.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "serverless webpack",
    "logs:aws": "serverless logs --function hello",
    "invoke:aws": "serverless invoke --function hello",
    "invoke:local": "serverless invoke local --function hello",
    "deploy:local": "serverless offline start",
    "deploy:production": "export NODE_ENV=production && npm run deploy:aws",
    "deploy:stage": "export NODE_ENV=development && npm run deploy:aws",
    "lint": "eslint",
    "deploy:aws": "serverless deploy",
    "deploy": "npm run test && npm run deploy:aws"
  },
  "author": "Nick Chow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/loanmarket/serverless-nodejs-starter.git"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-source-map-support": "^2.0.1",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.27.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "serverless": "^1.32.0",
    "serverless-offline": "^3.31.0",
    "serverless-webpack": "^5.2.0",
    "webpack": "^4.25.1",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "source-map-support": "^0.5.9"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
